<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-client-table" author="Eugene">
        <createTable tableName="client">
            <column name="client_id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(255)"/>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)"/>
            <column name="gender" type="VARCHAR(50)"/>
            <column name="marital_status" type="VARCHAR(50)"/>
            <column name="dependent_amount" type="INTEGER"/>
            <column name="passport_id" type="UUID"/>
            <column name="employment_id" type="UUID"/>
            <column name="account_number" type="VARCHAR(50)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="client"
                                 baseColumnNames="passport_id"
                                 referencedTableName="passport"
                                 referencedColumnNames="passport_id"
                                 constraintName="fk_client_passport"/>
        <addForeignKeyConstraint baseTableName="client"
                                 baseColumnNames="employment_id"
                                 referencedTableName="employment"
                                 referencedColumnNames="employment_id"
                                 constraintName="fk_client_employment"/>
    </changeSet>
</databaseChangeLog>
